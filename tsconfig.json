{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ]
}
